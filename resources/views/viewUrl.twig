{% extends 'layout.twig' %}

{% block styles %}
{% endblock %}

{% block body %}

    {{ content }}

    <div style="position: fixed !important;
                bottom: 0px !important;
                right: 0 !important;
                margin: 15px !important;
                z-index: 2147483647 !important;
                border-radius: 0 !important;">
        <section id="contact-cta-section">
            <div class="wrapper-full">
            <div class="cta-wrapper">
                <div class="details-wrapper">
                <h2>{{ link._title }}</h2>
                <p>{{ link._description }}</p>
                </div>
                <a class="blue-cta-button" href="{{ link._ctaUrl }}">{{ link._ctaHeader }}</a>
                <div class="clearfix"></div>
            </div>
            </div>
        </section>
    </div>

    <style>
        #contact-cta-section {
            padding-top: 37px !important;
            padding-bottom: 40px !important;
            font-family: "proxima-nova", sans-serif !important;
            font-weight: 400 !important;
            -webkit-font-smoothing: antialiased !important;
            text-rendering: optimizeLegibility !important;
            -moz-osx-font-smoothing: grayscale !important;
            padding: 75px 0 10px 0 !important;
            float: left !important;
            width: 100% !important;
            text-align: center !important;
        }
        .clearfix {
            clear: both !important;
        }
        .wrapper-full {
            position: relative !important;
            max-width: 1050px !important;
            width: 95vw;
            margin: 0 auto !important;
        }
        .cta-wrapper {
            margin-bottom: 0 !important;
            text-align: left !important;
            padding: 26px !important;
            background-color: #3686BE !important;
            border-radius: 3px !important;
        }
        .cta-wrapper .details-wrapper {
            float: left !important;
            width: 60% !important;
        }
        .cta-wrapper .details-wrapper h2 {
            font-family: "proxima-nova", sans-serif !important;
            font-weight: 600 !important;
            margin: 0 0 4px 0 !important;
            color: #FFF !important;
            font-size: 27px !important;
            line-height: normal !important;
        }
        .cta-wrapper .details-wrapper p {
            font-family: "proxima-nova", sans-serif !important;
            font-size: 18px !important;
            color: #FFF !important;
            margin: 0 !important;
            padding: 0 !important;
            box-sizing: border-box !important;
        }
        .cta-wrapper .blue-cta-button {
            font-family: "proxima-nova", sans-serif !important;
            background-color: #93CC76 !important;
            color: rgb(214, 133, 133) !important;
            letter-spacing: 0.1em !important;
            border-radius: 3px !important;
            transition: all 0.2s ease-in-out !important;
            text-decoration: none !important;
            font-weight: 600 !important;
            display: inline-block !important;
            white-space: pre !important;
            margin: 31px 0 25px 0 !important;
            float: right !important;
            margin: 0 !important;
            color: #3686BE !important;
            background-color: #FFF !important;
            padding: 17px 0 !important;
            width: 35% !important;
            text-align: center !important;
            margin-top: 4px !important;
            font-size: 17px !important;
        }
        @media screen and (max-width:830px) {
            .cta-wrapper .details-wrapper {
                width: 100% !important;
            }
            .cta-wrapper .blue-cta-button {
                width: 100% !important;
            }
        }
    </style>
{% endblock %}
